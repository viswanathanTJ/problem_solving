{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run Java",
            "type": "shell",
            "windows": {
                "cwd": "${workspaceRoot}",
                "command": "java",
                "args": [
                    "${relativeFile}",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt"
                ]
            },
            "linux": {
                "cwd": "${workspaceRoot}",
                "command": "/usr/bin/time",
                "args": [
                    "-v",
                    "-o",
                    "sys.txt",
                    "bash",
                    "-c",
                    "timeout",
                    "5",
                    "javac",
                    "${fileBasename}",
                    "&&",
                    "java",
                    "${fileBasenameNoExtension}",
                    "<",
                    "${workspaceRoot}/input.txt",
                    ">",
                    "${workspaceRoot}/output.txt",
                    "&&",
                    "rm",
                    "-f",
                    "${fileDirname}/*.class"
                ]
            },
            "osx": {
                "cwd": "${workspaceRoot}",
                "command": "/usr/bin/time",
                "args": [
                    "-o",
                    "sys.txt",
                    "timeout",
                    "5",
                    "javac",
                    "${fileBasename}",
                    "&&",
                    "java",
                    "${fileBasenameNoExtension}",
                    "<",
                    "${workspaceRoot}/input.txt",
                    ">",
                    "${workspaceRoot}/output.txt",
                    "&&",
                    "rm",
                    "-rf",
                    "${fileDirname}/*.class"
                ]
            },
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "java",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Run Python",
            "type": "shell",
            "windows": {
                "command": "python3",
                "args": [
                    "${relativeFile}",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt"
                ]
            },
            "linux": {
                "command": "/usr/bin/time",
                "args": [
                    "-v",
                    "-o",
                    "sys.txt",
                    "timeout",
                    "5",
                    "python3",
                    "${relativeFile}",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt"
                ]
            },
            "osx": {
                "command": "/usr/bin/time",
                "args": [
                    "-o",
                    "sys.txt",
                    "python3",
                    "${relativeFile}",
                    "<",
                    "input.txt",
                    ">",
                    "output.txt"
                ]
            },
            "presentation": {
                "reveal": "silent"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "py",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}